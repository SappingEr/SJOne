@using Microsoft.AspNet.Identity

@{var userName = User.Identity.GetUserName(); }

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()



        <ul class="nav navbar-nav navbar-right">
            @if (User.IsInRole("$Admin"))
            {
                <li>
                    @Html.ActionLink("Администрирование", "Index", "Admin")
                </li>
            }
            <li>
                <a href="@Url.Action("Info", "User", new { id = User.Identity.GetUserId() })">
                    <span class="glyphicon glyphicon-user"></span> @userName.Substring(0, 1).ToUpper()@(userName.Length > 1 ? userName.Substring(1) : "")
                    
                </a>
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Войти", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
