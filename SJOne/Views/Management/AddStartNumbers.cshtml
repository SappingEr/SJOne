@model SJOne.Models.ManagementViewModels.StartNumbersAddViewModel

@{
    ViewBag.Title = "Стартовые номера";
}

<h2>Стартовые номера</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">

        <div class="col"></div>

        <div class="col-sm-10 col-md-8 col-lg-6">

            <h3>Диапазон номеров</h3>

            <div class="row">
                <div class="form-group col-6">
                    @Html.LabelFor(model => model.InitialStartNumber)
                    @Html.EditorFor(model => model.InitialStartNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.InitialStartNumber, "", new { @class = "text-danger" })
                </div>


                <div class="form-group col-6">
                    @Html.LabelFor(model => model.FinalStartNumber)
                    @Html.EditorFor(model => model.FinalStartNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FinalStartNumber, "", new { @class = "text-danger" })
                </div>
            </div>            

            <form>
                <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="exRow">
                    <label class="custom-control-label" for="exRow">Исключить ряд номеров</label>
                </div>
            </form>

            <br />            

            <div id="exRowForm" class="row" style="display:none">               

                <div class="form-group col-6">
                    @Html.LabelFor(model => model.From)
                    @Html.EditorFor(model => model.From, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.From, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-6">
                    @Html.LabelFor(model => model.To)
                    @Html.EditorFor(model => model.To, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.To, "", new { @class = "text-danger" })
                </div>
            </div>            

            <form>
                <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="exNum">
                    <label class="custom-control-label" for="exNum">Исключить список номеров</label>
                </div>
            </form>

            <br />

            <div id="exNumbersForm" class="form-group col-md-6" style="display:none">
                @Html.LabelFor(model => model.ExNumbers)
                @Html.EditorFor(model => model.ExNumbers, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ExNumbers, "", new { @class = "text-danger" })
            </div>

            <div>
                <button type="submit" class="btn btn-primary btn-block">Сохранить</button>
            </div>

        </div>

        <div class="col"></div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>

        $(document).ready(function () {

            $('#exRow').click(function () {
                $('#exRowForm').toggle();
            });

            $('#exNum').click(function () {
                $('#exNumbersForm').toggle();
            });

        });

    </script>

}
