@using SJOne.Extensions
@using SJOne.Models.Filters
@model SJOne.Models.ManagementViewModels.JudgeListViewModel

@{
    ViewBag.Title = "Список Судей";
}

<h2>Список судей</h2>

@Html.Partial("_SearchUser", new UserFilter())

<table class="table">
    <tr>
        <th>
            @Html.SortLink("Имя", "Name", "AddJudge", "Management", null)
        </th>
        <th>
            @Html.SortLink("Фамилия", "Surname", "AddJudge", "Management", null)
        </th>
        <th>
            @Html.SortLink("Город", "City", "AddJudge", "Management", null)
        </th>
        <th>
            @Html.SortLink("Дата рождения", "DOB", "AddJudge", "Management", null)
        </th>

        <th>Опции</th>
    </tr>

    @foreach (var item in Model.Judges)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                <a class="btn btn-success" href="@Url.Action("AddJudge", "Management",
                                       new { raceId = Model.Id, judgeId = item.Id })">Назначить<span class="glyphicon glyphicon-ok"></span>
                </a>
            </td>
        </tr>
    }

</table>
