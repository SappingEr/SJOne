@model SJOne.Models.AvatarViewModel

<div class="modal-sm modal-content">
    @using (Html.BeginForm("UploadAvatar", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Загрузка изображения</h4>
        </div>

        <div class="modal-body">            

            <div>
                <input type="file" name="imageFile" accept="image/jpeg"/>
                @Html.ValidationMessageFor(model => model.Avatar, "", new { @class = "text-danger" })
            </div>            
            <br />
            <p class="modal-footer">
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </p>

        </div>
    }

</div>

@Scripts.Render("~/bundles/jqueryval")

