@model SJOne.Models.UserViewModels.GenderViewModel

@{
    ViewBag.Title = "Пол";
}

<div class="row">

    <div class="col"></div>

    <div class="card col-sm-7 col-md-6 col-lg-5 col-xl-4 mx-1">
        <div class="card-body">
            <h2 class="card-title text-center">Пол</h2>

            <hr />

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group col">
                    @Html.LabelFor(model => model.Gender)
                    @Html.EnumDropDownListFor(model => model.Gender, new { @class = "form-control", @aria_describedby = "genderHelp" })
                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                    <small id="genderHelp" class="form-text text-muted">
                        *Укажите пол
                    </small>
                </div>

                <hr />

                <div class="row">

                    <div class="col">
                        <a class="btn btn-secondary btn-block" href="@Url.Action("Info", "User", new { id = Model.Id })">
                            Отмена
                        </a>
                    </div>

                    <div class="col">
                        <button type="submit" class="btn btn-primary btn-block">Далее</button>
                    </div>

                </div>
                

            }
        </div>
    </div>

    <div class="col"></div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
