@model Notification.Models.ChangePassViewModel


<div class="modal-content">



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Изменить пароль пользователя</h4>
        </div>

        <div class="modal-body">
            <div class="form-horizontal">                
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">                    
                    <div class="col-md-offset-3 col-md-6">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите пароль" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">                   
                    <div class="col-md-offset-3 col-md-6">
                        @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите новый пароль" } })
                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">                   
                    <div class="col-md-offset-3 col-md-6">
                        @Html.EditorFor(model => model.ConfirmNewPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите новый пароль повторно" } })
                        @Html.ValidationMessageFor(model => model.ConfirmNewPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="modal-footer">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Изменить пароль" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>


@Scripts.Render("~/bundles/jqueryval")
